﻿Model List<Tekliftakip.Models.Products>

<div class="container-fluid fruite py-5">
    <div class="container py-5">
        <div class="tab-class text-center">
            <div class="row g-4">
                <div class="col-lg-4 text-start">
                    <h1>Çok Satanlar</h1>
                </div>
                <div class="col-lg-8 text-end">
                    <ul class="nav nav-pills d-inline-flex text-center mb-5">
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill active" data-bs-toggle="pill" href="#tab-1">
                                <span class="text-dark" style="width: 130px;">Tüm Ürünler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex py-2 m-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-2">
                                <span class="text-dark" style="width: 130px;">Sebzeler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-3">
                                <span class="text-dark" style="width: 130px;">Meyveler</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-4">
                                <span class="text-dark" style="width: 130px;">Ekmek</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="d-flex m-2 py-2 bg-light rounded-pill" data-bs-toggle="pill" href="#tab-5">
                                <span class="text-dark" style="width: 130px;">Et</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="tab-content">
                    @foreach (var item in Model)
                    {
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                        <div class="col-lg-12">
                            <div class="row g-4">
                                <div class="col-md-6 col-lg-4 col-xl-3">
                                    <div class="rounded position-relative fruite-item">
                                        <div class="fruite-img">
                                        <img src="/Urunler/@item.ProductPicture" class="img-fluid w-100 rounded-top" alt="">
                                        </div>
                                        <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@item.ProductName</div>
                                        <div class="p-4 rounded-bottom">
                                        <h4>@item.ProductCode</h4>
                                        <div class="d-flex justify-content-between align-items-center flex-lg-wrap">
                                            <div>
                                            <p class="text-dark fs-5 fw-bold mb-0">@item.ProductPrice </p>
                                            <div>
                                            <br />
                                            <a href="/Home/Detay/@item.ProductId" class="btn border border-secondary rounded-pill px-3 text-primary d-flex align-items-center"><i class="fa fa-shopping-bag me-2 text-primary">
                                            </i> <span>Detay</span></a>
                                            <br />
                                            <a href="/Cart/Add/@item.ProductId" class="btn border border-secondary rounded-pill px-3 text-primary d-flex align-items-center"><i class="fa fa-shopping-bag me-2 text-primary">
                                            </i> <span>Sepette Ekle</span></a>
                                                                <a href="/Cart/Add/@item.ProductId" class="btn border border-secondary rounded-pill px-3 text-primary d-flex align-items-center">
                                                                    <i class="fa fa-shopping-bag me-2 text-primary">
                                                                    </i> <span>Teklif Ver</span>
                                                                </a>
                                             </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      </div>
                </div>
            </div>
        }